<section class="signup">
<form class="auth" action="/auth/sign-up" method="POST">
  <h1 class="h1-title">Create a new account!</h1>
  <label for="username"></label>
  <input class="signuphover" type="text" maxlength="12" name="username" id="username" placeholder="Username"/>
  <br>
  <label for="password"></label>
  <input class="signup-hover" type="password" name="password" id="password" placeholder="Password" />
  <br>
  <label for="confirmPassword"></label>
  <input class="signup-hover" type="password" name="confirmPassword" id="confirmpassword" placeholder="Confirm Password"/>
  <br>
  <button class="btn-signup" type="submit">Sign up</button>
</form>
</section>

