<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<h1>This is <%= selectedUser.username %>'s Profile Page</h1>
<form action="/users/<%= user._id %>/entourage" method="POST">
  <button type="submit">Add Friend</button>
</form>




<section>
  <h1><%= selectedUser.username %>'s Songs</h1>
  <ul>
    <% songs.forEach( song => { %>
      <% if(song.owner.equals(selectedUser?._id)) { %>
      <li>
        <a href="/songs/<%= song._id %>"><%= song.title %> - <%= song.artist %></a>
      </li>
      <% } %>
      <% })  %>
  </ul>
</section>

