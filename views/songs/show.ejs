<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <p>From the Studio of <%= song.owner.username %></p>
  <h1><%= song.title %></h1> 
  <h1><%= song.artist %></h1>
  <% if (song.owner.equals(user?._id)) { %>
    <a href="/songs/<%= song._id %>/edit">
      <button class="btn">Edit Song</button>
    </a>
    <form action="/songs/<%= song._id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn">X</button>
    </form>
    <% } else { %>
    <section>
      <label for="content-input">Comment on Song:
        <input type="text" name="content" id="content-input">
      </label> <br>
      <label for="add-song-input">Add Song to your list?
        <input type="checkbox" name="addSong" id="add-song-input">
      </label> <br>
      <button type="submit">Comment</button>
    </section>
    <% } %>
</section>

<h2>Comments</h2>
<ul>
  <% song.comments?.forEach(comment => { %>
    <li>
      <%= comment.content %> - <%= comment.author.username %>
    </li> 
  <% }) %>
</ul>

<%- include('../partials/footer') %>